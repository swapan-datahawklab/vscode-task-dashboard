{
  "name": "vscode-task-dashboard",
  "displayName": "Task Dashboard",
  "description": "A dashboard for running tasks with clickable buttons",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vscode-task-dashboard.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:taskDashboard"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "task-dashboard",
          "title": "Task Dashboard",
          "icon": "media/play.svg"
        }
      ]
    },
    "views": {
      "task-dashboard": [
        {
          "type": "webview",
          "id": "taskDashboard",
          "name": "Task Dashboard"
        }
      ]
    },
    "commands": [
      {
        "command": "taskDashboard.refresh",
        "title": "Refresh Task Dashboard"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
} 